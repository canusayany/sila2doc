<Window
    x:Class="SilaGeneratorWpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SilaGeneratorWpf.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:SilaGeneratorWpf.Views"
    Title="SiLA2 客户端代码生成器"
    Width="1200"
    Height="700"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <!--  TreeView Item Style  -->
        <Style TargetType="TreeViewItem">
            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
            <Setter Property="Padding" Value="2" />
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Title  --><!--
        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,15"
            HorizontalAlignment="Center"
            FontSize="24"
            FontWeight="Bold"
            Text="SiLA2 客户端代码生成器" />-->

        <!--  Tab Control  -->
        <TabControl Grid.Row="1">
            <!--  Tab 1: 从文件生成  -->
            <TabItem Header="📁 从文件生成">
                <views:FileGenerationView DataContext="{Binding FileGenerationViewModel}" />
            </TabItem>

            <!--  Tab 2: 服务器发现  -->
            <TabItem Header="🔍 服务器发现">
                <views:ServerDiscoveryView DataContext="{Binding ServerDiscoveryViewModel}" />
            </TabItem>

            <!--  Tab 3: 生成D3驱动  -->
            <TabItem Header="🎯 生成D3驱动">
                <views:D3DriverView DataContext="{Binding D3DriverViewModel}" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
