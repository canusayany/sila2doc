<UserControl
    x:Class="SilaGeneratorWpf.Views.ServerDiscoveryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SilaGeneratorWpf.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:SilaGeneratorWpf.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:ServerDiscoveryViewModel, IsDesignTimeCreatable=True}"
    d:DesignHeight="600"
    d:DesignWidth="1000"
    mc:Ignorable="d">
    <UserControl.Resources>
        <!--  TreeView Item Style  -->
        <Style TargetType="TreeViewItem">
            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
            <Setter Property="Padding" Value="2" />
        </Style>
    </UserControl.Resources>

    <Grid Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding IsSidebarVisible, Converter={StaticResource BooleanToGridLengthConverter}}" MinWidth="0" MaxWidth="500" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  左侧侧边栏  -->
        <Border
            Grid.Column="0"
            Background="#F8F9FA"
            BorderBrush="#DEE2E6"
            BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  工具栏  -->
                <StackPanel Grid.Row="0" Margin="10" Orientation="Vertical">
                    <!--  实时监控状态显示  -->
                    <Border 
                        Background="#E8F5E9"
                        BorderBrush="#4CAF50"
                        BorderThickness="1"
                        CornerRadius="3"
                        Padding="10,8"
                        Margin="0,0,0,10">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock 
                                    Text="🟢" 
                                    FontSize="14" 
                                    VerticalAlignment="Center"
                                    Margin="0,0,5,0"/>
                                <TextBlock 
                                    Text="实时监控已启动" 
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    Foreground="#2E7D32"
                                    VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock
                                FontSize="11"
                                Foreground="{Binding DiscoveryStatusColor}"
                                Text="{Binding DiscoveryStatus}"
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </Border>
                    
                    <Button
                        Margin="0,0,0,5"
                        Padding="10,8"
                        Background="#16a085"
                        BorderThickness="0"
                        Command="{Binding RefreshSelectedCommand}"
                        Content="🔄 刷新选中服务器"
                        FontSize="10"
                        Visibility="Collapsed"
                        Foreground="White" />
                </StackPanel>

                <!--  服务器树  -->
                <TreeView
                    x:Name="ServerTreeView"
                    Grid.Row="1"
                    Margin="10,0"
                    BorderBrush="#bdc3c7"
                    BorderThickness="1"
                    ItemsSource="{Binding Servers}"
                    SelectedItemChanged="ServerTreeView_SelectedItemChanged">
                    <TreeView.Resources>
                        <!--  服务器节点模板  -->
                        <HierarchicalDataTemplate DataType="{x:Type local:ServerInfoViewModel}" ItemsSource="{Binding Features}">
                            <StackPanel Orientation="Horizontal">
                                <CheckBox Margin="0,0,5,0" IsChecked="{Binding IsSelected}" />
                                <TextBlock Margin="0,0,5,0" Text="🖥️" />
                                <TextBlock FontWeight="Bold" Text="{Binding DisplayText}" />
                            </StackPanel>
                        </HierarchicalDataTemplate>

                        <!--  特性节点模板  -->
                        <HierarchicalDataTemplate DataType="{x:Type local:FeatureInfoViewModel}">
                            <StackPanel Orientation="Horizontal">
                                <CheckBox Margin="0,0,5,0" IsChecked="{Binding IsSelected}" />
                                <TextBlock Margin="0,0,5,0" Text="📦" />
                                <TextBlock Text="{Binding DisplayText}" />
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.Resources>
                </TreeView>

                <!--  底部操作栏（已清理，移至D3驱动生成Tab）  -->
            </Grid>
        </Border>

        <!--  分隔符（可拖动调整宽度）  -->
        <GridSplitter
            Grid.Column="1"
            Width="5"
            HorizontalAlignment="Stretch"
            Background="#DEE2E6" />

        <!--  右侧详情面板  -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  顶部导航条  -->
            <Border
                Grid.Row="0"
                Height="50"
                Background="#F8F9FA"
                BorderBrush="#DEE2E6"
                BorderThickness="0,0,0,1">
                <Grid Margin="20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Button
                        Grid.Column="0"
                        Padding="10,5"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding ToggleSidebarCommand}"
                        Content="☰"
                        FontSize="20"
                        ToolTip="显示/隐藏侧边栏" />

                    <TextBlock
                        Grid.Column="1"
                        Margin="20,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Foreground="#212529"
                        Text="{Binding DetailTitle}" />
                </Grid>
            </Border>

            <!--  详情内容区域  -->
            <ScrollViewer
                Grid.Row="1"
                Padding="20"
                VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="DetailPanel">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Foreground="#95a5a6"
                        Text="请从左侧选择服务器或特性查看详细信息" />
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>

