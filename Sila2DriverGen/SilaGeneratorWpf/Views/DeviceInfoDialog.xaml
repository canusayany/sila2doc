<Window
    x:Class="SilaGeneratorWpf.Views.DeviceInfoDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="设备信息输入"
    Width="500"
    Height="350"
    WindowStartupLocation="CenterOwner"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  标题  -->
            <RowDefinition Height="*" />
            <!--  输入表单  -->
            <RowDefinition Height="Auto" />
            <!--  按钮  -->
        </Grid.RowDefinitions>

        <!--  标题  -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock
                FontSize="18"
                FontWeight="Bold"
                Text="请输入设备信息" />
            <TextBlock
                Margin="0,5,0,0"
                Foreground="Gray"
                Text="这些信息将用于生成D3驱动代码" />
            <Separator Margin="0,10,0,0" />
        </StackPanel>

        <!--  输入表单  -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  品牌  -->
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="设备品牌 *:" />
            <TextBox
                Grid.Row="0"
                Grid.Column="1"
                Height="30"
                Margin="0,0,0,15"
                VerticalContentAlignment="Center"
                Text="{Binding Brand, UpdateSourceTrigger=PropertyChanged}"
                ToolTip="例如：Tecan、Hamilton、Bioyond等" />

            <!--  型号  -->
            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="设备型号 *:" />
            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                Height="30"
                Margin="0,0,0,15"
                VerticalContentAlignment="Center"
                Text="{Binding Model, UpdateSourceTrigger=PropertyChanged}"
                ToolTip="例如：Fluent、STAR、TemperatureController等" />

            <!--  设备类型  -->
            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="设备类型 *:" />
            <TextBox
                Grid.Row="2"
                Grid.Column="1"
                Height="30"
                Margin="0,0,0,15"
                VerticalContentAlignment="Center"
                Text="{Binding DeviceType, UpdateSourceTrigger=PropertyChanged}"
                ToolTip="例如：Robot、Incubator、Washer等" />

            <!--  开发者  -->
            <TextBlock
                Grid.Row="3"
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="开发者:" />
            <TextBox
                Grid.Row="3"
                Grid.Column="1"
                Height="30"
                VerticalContentAlignment="Center"
                Text="{Binding Developer, UpdateSourceTrigger=PropertyChanged}"
                ToolTip="开发者或公司名称" />
        </Grid>

        <!--  操作按钮  -->
        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="100"
                Height="35"
                Margin="0,0,10,0"
                Background="#95a5a6"
                BorderThickness="0"
                Command="{Binding CancelCommand}"
                Content="取消"
                Foreground="White"
                IsCancel="True" />
            <Button
                Width="100"
                Height="35"
                Background="#27ae60"
                BorderThickness="0"
                Command="{Binding ConfirmCommand}"
                Content="确定"
                Foreground="White"
                IsDefault="True" />
        </StackPanel>
    </Grid>
</Window>

