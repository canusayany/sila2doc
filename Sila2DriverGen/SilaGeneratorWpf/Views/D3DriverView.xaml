<UserControl
    x:Class="SilaGeneratorWpf.Views.D3DriverView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="1000"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  客户端代码选择  -->
            <RowDefinition Height="Auto" />
            <!--  设备信息配置  -->
            <RowDefinition Height="Auto" />
            <!--  生成选项  -->
            <RowDefinition Height="*" />
            <!--  特性方法预览  -->
            <RowDefinition Height="Auto" />
            <!--  操作按钮  -->
        </Grid.RowDefinitions>

        <!--  第一部分：客户端代码选择  -->
        <GroupBox
            Grid.Row="0"
            Margin="0,0,0,10"
            Header="1. 选择客户端代码目录">
            <StackPanel Margin="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox
                        Grid.Column="0"
                        Padding="5"
                        VerticalAlignment="Center"
                        IsReadOnly="True"
                        Text="{Binding ClientCodePath, Mode=TwoWay}" />
                    <Button
                        Grid.Column="1"
                        Margin="5,0,0,0"
                        Padding="10,5"
                        Command="{Binding BrowseClientCodeCommand}"
                        Content="📁 浏览" />
                </Grid>
                <TextBlock
                    Margin="0,5,0,0"
                    Foreground="#7f8c8d"
                    Text="{Binding DetectedFeaturesText}" />
            </StackPanel>
        </GroupBox>

        <!--  第二部分：设备信息  -->
        <GroupBox
            Grid.Row="1"
            Margin="0,0,0,10"
            Header="2. 配置设备信息">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,0,5,5"
                    VerticalAlignment="Center"
                    Text="品牌：" />
                <TextBox
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="0,0,10,5"
                    Padding="5"
                    Text="{Binding DeviceBrand, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="2"
                    Margin="0,0,5,5"
                    VerticalAlignment="Center"
                    Text="型号：" />
                <TextBox
                    Grid.Row="0"
                    Grid.Column="3"
                    Margin="0,0,0,5"
                    Padding="5"
                    Text="{Binding DeviceModel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0,0,5,0"
                    VerticalAlignment="Center"
                    Text="类型：" />
                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,0,10,0"
                    Padding="5"
                    Text="{Binding DeviceType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="2"
                    Margin="0,0,5,0"
                    VerticalAlignment="Center"
                    Text="开发者：" />
                <TextBox
                    Grid.Row="1"
                    Grid.Column="3"
                    Padding="5"
                    Text="{Binding DeveloperName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>
        </GroupBox>

        <!--  第三部分：生成选项  -->
        <GroupBox
            Grid.Row="2"
            Margin="0,0,0,10"
            Header="3. 生成选项">
            <StackPanel Margin="10">
                <Grid Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Text="输出目录：" />
                    <TextBox
                        Grid.Column="1"
                        Padding="5"
                        IsReadOnly="True"
                        Text="{Binding D3OutputPath, Mode=TwoWay}" />
                    <Button
                        Grid.Column="2"
                        Margin="5,0,0,0"
                        Padding="10,5"
                        Command="{Binding BrowseD3OutputCommand}"
                        Content="📁" />
                </Grid>

                <Grid Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Text="命名空间：" />
                    <TextBox
                        Grid.Column="1"
                        Padding="5"
                        Text="{Binding D3Namespace, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>

                <CheckBox
                    Content="自动编译生成的项目 (Release)"
                    IsChecked="{Binding AutoCompile}"
                    Margin="0,0,0,5" />

                <CheckBox
                    Content="生成测试控制台项目（可选）"
                    IsChecked="{Binding GenerateTestConsole}" />
            </StackPanel>
        </GroupBox>

        <!--  第四部分：特性方法预览  -->
        <GroupBox
            Grid.Row="3"
            Margin="0,0,0,10"
            Header="4. 特性方法预览">
            <DataGrid
                AlternatingRowBackground="#F8F9FA"
                AutoGenerateColumns="False"
                GridLinesVisibility="Horizontal"
                HeadersVisibility="Column"
                IsReadOnly="True"
                ItemsSource="{Binding MethodPreviewData}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="150"
                        Binding="{Binding FeatureName}"
                        Header="特性名称" />
                    <DataGridTextColumn
                        Width="200"
                        Binding="{Binding MethodName}"
                        Header="方法名称" />
                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding MethodType}"
                        Header="类型" />
                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding ReturnType}"
                        Header="返回值" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Description}"
                        Header="说明" />
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!--  操作按钮  -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                VerticalAlignment="Center"
                Foreground="{Binding StatusColor}"
                Text="{Binding StatusMessage}" />

            <Button
                Grid.Column="1"
                Margin="0,0,5,0"
                Padding="15,8"
                Background="#16a085"
                BorderThickness="0"
                Command="{Binding OpenD3OutputFolderCommand}"
                Content="🗂️ 打开输出文件夹"
                Foreground="White" />

            <Button
                Grid.Column="2"
                Padding="20,10"
                Background="#27ae60"
                BorderThickness="0"
                Command="{Binding GenerateD3DriverCommand}"
                Content="⚡ 生成D3驱动"
                FontWeight="Bold"
                Foreground="White" />
        </Grid>
    </Grid>
</UserControl>


