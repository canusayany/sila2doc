<UserControl
    x:Class="SilaGeneratorWpf.Views.FileGenerationView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:SilaGeneratorWpf.ViewModels"
    d:DataContext="{x:Static vm:DesignTimeData.CreateFileGenerationViewModel}"
    d:DesignHeight="600"
    d:DesignWidth="1000"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Drop Zone  -->
        <Border
            Grid.Row="0"
            MinHeight="120"
            AllowDrop="True"
            DragEnter="DropZone_DragEnter"
            DragLeave="DropZone_DragLeave"
            Drop="DropZone_Drop"
            Style="{StaticResource DropZoneStyle}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Foreground="#2c3e50"
                    Text="📁 拖放 Feature 文件到这里" />
                <TextBlock
                    Margin="0,5,0,0"
                    HorizontalAlignment="Center"
                    FontSize="12"
                    Foreground="#7f8c8d"
                    Text="支持 .sila.xml 文件，可同时拖放多个文件" />
                <Button
                    Margin="0,10,0,0"
                    Padding="20,8"
                    Background="#3498db"
                    BorderThickness="0"
                    Click="SelectFiles_Click"
                    Content="或点击选择文件..."
                    Foreground="White" />
            </StackPanel>
        </Border>

        <!--  File List  -->
        <GroupBox
            Grid.Row="1"
            Margin="0,15,0,0"
            Header="已添加的 Feature 文件">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <ListBox
                    x:Name="FileListBox"
                    Grid.Row="0"
                    BorderBrush="#bdc3c7"
                    BorderThickness="1"
                    ItemsSource="{Binding FeatureFiles}"
                    ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="{Binding}"
                                    TextTrimming="CharacterEllipsis"
                                    ToolTip="{Binding}" />
                                <Button
                                    Grid.Column="1"
                                    Width="30"
                                    Height="30"
                                    Margin="10,0,0,0"
                                    Padding="0"
                                    Background="#e74c3c"
                                    BorderThickness="0"
                                    Command="{Binding DataContext.RemoveFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Content="✕"
                                    FontSize="11"
                                    Foreground="White"
                                    ToolTip="移除此文件" />
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Button
                    Grid.Row="1"
                    Margin="5"
                    Padding="15,5"
                    HorizontalAlignment="Right"
                    Background="#95a5a6"
                    BorderThickness="0"
                    Command="{Binding ClearFilesCommand}"
                    Content="清空列表"
                    FontSize="12"
                    Foreground="White" />
            </Grid>
        </GroupBox>

        <!--  Options  -->
        <StackPanel
            Grid.Row="2"
            Margin="0,15,0,0"
            Orientation="Vertical">
            <!--  输出目录  -->
            <StackPanel
                Margin="0,0,0,10"
                Cursor="Hand"
                Orientation="Horizontal">
                <TextBlock
                    Margin="0,0,5,0"
                    VerticalAlignment="Center"
                    Text="输出目录：" />
                <TextBox
                    Width="400"
                    Padding="5"
                    VerticalAlignment="Center"
                    IsReadOnly="True"
                    Text="{Binding OutputDirectory, Mode=OneWay}"
                    ToolTip="选择代码生成的输出目录" />
                <Button
                    Background="{x:Null}"
                    BorderThickness="0,0,0,2"
                    Command="{Binding BrowseOutputDirectoryCommand}"
                    Content="📁"
                    FontFamily="Arial Black"
                    FontSize="16"
                    ToolTip="选择输出目录" />
            </StackPanel>

            <!--  命名空间  -->
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    Margin="0,0,5,0"
                    VerticalAlignment="Center"
                    Text="命名空间：" />
                <TextBox
                    Width="400"
                    Padding="5"
                    VerticalAlignment="Center"
                    Text="{Binding Namespace, UpdateSourceTrigger=PropertyChanged}"
                    ToolTip="自定义命名空间，默认为Sila2Client" />
            </StackPanel>
        </StackPanel>

        <!--  Action Buttons  -->
        <Grid Grid.Row="3" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                VerticalAlignment="Center"
                Foreground="{Binding StatusColor}"
                Text="{Binding StatusMessage}" />

            <Button
                Grid.Column="1"
                Background="#16a085"
                BorderThickness="0"
                Command="{Binding OpenOutputFolderCommand}"
                Content="🗂️ 打开输出文件夹"
                FontSize="12"
                Foreground="White"
                IsEnabled="{Binding IsGenerating, Converter={StaticResource InverseBooleanConverter}}" />

            <Button
                Grid.Column="2"
                Padding="20,10"
                Background="#27ae60"
                BorderThickness="0"
                Command="{Binding GenerateClientCommand}"
                Content="⚡ 生成客户端代码"
                FontSize="12"
                FontWeight="Bold"
                Foreground="White"
                IsEnabled="{Binding IsGenerating, Converter={StaticResource InverseBooleanConverter}}" />
        </Grid>
    </Grid>
</UserControl>

